<% @logo_path = current_user ? current_user : root_path %>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <%= link_to "Points Leaders", @logo_path, id: "logo" %>
        <ul class="nav navbar-nav pull-right">
            <li><%= link_to "Leagues", leagues_path %></li>
            <% if signed_in? %>
                <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Add Funds", "#" %></li>
                  <li><%= link_to "My Profile", current_user %></li>
                  <li><%= link_to "User Settings",edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
                </ul>
            <% else %>
                <li><%= link_to "Sign in", signin_path %></li>
            <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>