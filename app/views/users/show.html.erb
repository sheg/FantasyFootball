<h1> <%= "#{@user.first_name} #{@user.last_name}'s Profile" %> </h1>

<% if @user_leagues.count > 0 %>
  <h3>My Leagues</h3>
  <table class="table table-responsive table-condensed">
    <th>Name</th>
    <th>Format</th>
    <th>Draft Date</th>
    <th>Current Week</th>
    <th>Weeks Remaining</th>
    <th>Rank</th>
    <th>Entry</th>
    <th>Payout</th>
    <tbody>
    <% @user_leagues.each do |league| %>
      <tr>
        <td><%= link_to league.name, league %></td>
        <td><%= league.league_type.name %></td>
        <td><%= league.draft_start_date.in_time_zone("Eastern Time (US & Canada)").strftime("%D %a %l:%M %p %Z") %></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= league.entry_amount != 0.00 ? number_to_currency(league.entry_amount) : "FREE" %></td>
        <td></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No current leagues</p>
  <%= link_to "Join a League", leagues_path, class: "btn btn-success" %>
<% end %>